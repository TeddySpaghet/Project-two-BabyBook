<section class="profile-section">   
    <div class="profile-card">
        <h4><%= currentUser.name %>'s profile </h4>
    </div>
</section> 
<section class="profile-section card-section">
    <% babies.forEach(function(baby) {  %>
        <div class="row">
            <div class="col">
                <div class="card small">
                    <div class="card-image">
                        <img src="<%= baby.img %>">
                    </div>
                    <div class="card-content">
                        <a href="/profile/<%= baby.name %>"><%= baby.name %></a>
                    </div>
                    <div class="card-action">
                        <a href="/profile/<%= baby.name %>/edit" class="btn btn-primary a-btn-slide-text">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            <span><strong>Edit</strong></span>
                        </a>
                        <form action="/profile/<%=baby.name%>?_method=DELETE" method="POST" class="buttons">
                            <button class="btn btn-primary a-btn-slide-text" type='submit'>
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                <span><strong>Delete</strong></span>
                            </button>
                        </form>
                    </div>
                </div>      
            </div>
        </div>
    <% } ) %>
</section>


<div id="modal1" class="modal">
    <div class="modal-content">
        <form class="col" method="POST" action="/profile">
        <br>
            <div class="input-field col">
                <label for="name">Your Baby's Name</label>
                <input id="baby_name" type="text" class="validate" name="name">
            </div>
            <div class="input-field col">
                <label for="img">Your Baby's profile picture</label>
                <input id="baby_image" type="text" class="validate" name="img">
            </div>
            <div class="input-field col">
                <input id="baby_birthdate" type="date" class="validate" name="birthdate">
                <label for="birthdate">Your Baby's Birthdate</label>
                <input type="hidden" name="userId" value=<%= currentUser.id %> />
            </div>
        <!-- once we get the image upload functioning, this allows us to select a file to upload -->
