<div class="container">
    <h5><%= currentUser.name %>'s profile </h5>


    <div class="container-flex">
        <% babies.forEach(function(baby) {  %>
        <div class="row">
            <div class="col s12 m7">
            <div class="card small">
                <div class="card-image">
                    <img src="images/01month.jpg<%#= baby.image%>">
                </div>
                <div class="card-content">
                    <a href="/profile/<%= baby.name %>"><%= baby.name %></a>
                </div>
                <div class="card-action">
                    <a href="/profile/edit/<%= baby.name %>" class="btn btn-primary a-btn-slide-text">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        <span><strong>Edit</strong></span>
                    </a>
                    <a href="/profile" class="btn btn-primary a-btn-slide-text" method="DELETE" onclick="if (!confirm('Are you sure?')) { return false }">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <span><strong>Delete</strong></span>
                    </a>
                </div>
            </div>
            </div>
        </div>
        <% } ) %>

                        

    <div class="card small" style="align-items:center;">
        <div id="modal1" class="modal">
            <div class="modal-content">
                <form class="col s12 m7" method="POST" action="/profile">
                    <br>

                    <div class="input-field col s12">
                    <label for="name">Your Baby's Name</label>
                    <input id="baby_name" type="text" class="validate" name="name">
                    </div>
                    <!-- <div class="input-field col s12">
                        <label for="image">Your Baby's profile picture</label>
                        <input id="baby_image" type="text" class="validate" name="image">
                        </div> -->
                    <div class="input-field col s12">
                        <input id="baby_birthdate" type="date" class="validate" name="birthdate">
                        <label for="birthdate">Your Baby's Birthdate</label>
                        <input type="hidden" name="userId" value=<%= currentUser.id %> />
                    </div>
                <!-- once we get the image upload functioning, this allows us to select a file to upload -->
                <!-- <div class="file-field col s12 input-field">
                    <div class="btn btn-select">
                        <span>File</span>
                        <input type="file">
                        </div>
                        <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                        </div>
                    </div> -->

                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit<i
                        class="material-icons right"></i>
                    </button>
            </div>
            </form>
        </div>
        <a id="create-profile" class="waves-effect waves-light btn modal-trigger" href="#modal1">Create a baby
            profile</a>
        <div class="modal-footer">
            <!-- <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a> -->
        </div>
    </div>
<script src="js/modal.js"></script>
